version: '3.8'
services:
  engine:
    build:
      context: .
      dockerfile: engine/Dockerfile
    image: calarbot2-engine:latest
    command: ["./engine"]
    volumes:
      - /opt/calarbot/calarbot.yaml:/calarbot.yaml
      - /opt/calarbot/tokens/.tgtoken:/.tgtoken

  simpleReply:
    build:
      context: .
      dockerfile: modules/simpleReply/Dockerfile
    image: calarbot2-simplereply:latest
    command: ["./simpleReply"]
    ports:
      - "8080:8080"
    environment:
      - MODULE_PORT=8080
      - MODULE_ORDER=1000

  skazka:
    build:
      context: .
      dockerfile: modules/skazka/Dockerfile
    image: calarbot2-skazka:latest
    command: ["./skazka"]
    ports:
      - "8081:8080"
    environment:
      - MODULE_PORT=8080
      - MODULE_ORDER=100
    volumes:
      - /opt/calarbot/tokens/.tgtoken:/.tgtoken

  sberify-service:
    build: ./sberify-service
    image: sberify-service:latest
    ports:
      - "5000:5000"
    environment:
      - PORT=5000
    restart: always

  sber:
    build:
      context: .
      dockerfile: modules/sber/Dockerfile
    image: calarbot2-sber:latest
    command: ["./sber"]
    ports:
      - "8082:8080"
    environment:
      - MODULE_PORT=8080
      - MODULE_ORDER=500
      - SBERIFY_URL=http://sberify-service:5000/sberify
    depends_on:
      - sberify-service

  aiAnswer:
    build:
      context: .
      dockerfile: modules/aiAnswer/Dockerfile
    image: calarbot2-aianswer:latest
    command: ["./aiAnswer"]
    ports:
      - "8083:8080"
    environment:
      - MODULE_PORT=8080
      - MODULE_ORDER=100
    volumes:
      - /opt/calarbot/tokens/aiConfig.yaml:/aiConfig.yaml
